    <!-- Start Welcome area -->
    <!-- header--------------------------->
   <%-include('./includes/header.ejs')%>
   
   <div class="breadcome-area" style="margin-top:-20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list">
                    <div class="row">
                       
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" >
                           
                                <form action="/searchByStudentId" method="POST">
                                    <div class="col-md-2">
                                    <input class="form-control" required type="text" placeholder="Student Id" name="start"></div>
                                    
                                    <!-- <div class="col-md-2">
                                    <input class="form-control" style="margin-left:-15px" type="text" placeholder="End" name="end"></div>  -->
                                    <button class="form-control" style="width: 30px;background-color:#800060;color: white;"><i class="fa fa-search" ></i></button>
                                </form>
                           
                        </div>
                        <div>
                                <form action="/searchByDepartment" method="POST">
                                    <select name="valueSelect">
                                       <%for(department of dp){%>
                                        <option value="<%=department._id%>"><%=department.depname%></option>
                                        <%}%>
                                    </select>
                                    <button><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <!-- Start main section -->

   
   
    <div class="contacts-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                    <%for(S of students){
                        if(S.deleted==0 && S.result=="Failed"){   %>
              
                            
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                            <div class="student-inner-std res-mg-b-30">
                                <div class="student-img">
                                    <%if(S.photo!='null'){%>
                                        <img src="/<%=S.photo%>" alt="">
                                        
                                        <%}else if(S.photo=='null'){%>
                                            <img src="/images/unknown.png" alt="">
                                         <%}%>

                                </div>
                                <div class="student-dtl">
                                    <h2><%=S.name%></h2>
                                    <p class="dp"><%=S.studentId%></p>
                                    <form action="/detail" method="POST">
                                        <input type="hidden" name="studentId" value="<%=S._id%>">
                                    <button style="margin-top:5px"  class="btn detail "><i  class=" fa fa-pencil-square-o"></i>details...</button>
                                   <a href="/deleteStudent/<%=S._id%>"  style="color:black" ><input type="button" value="delete" style="margin-top:5px"    class="btn delete"></a>
                                   <a href="/passed/<%=S._id%>"  style="color:black" ><input type="button" value="Pass" style="margin-top:5px"    class="btn delete"></a>
                                </form>
                                </div>
                            </div>
                        </div>
               <% }}%>
               
             
            </div>
            <div class="row">
             
            </div>
        </div>
    </div>

      <!-- end of mainsection -->
       
