    <script type="text/javascript">
     function generateQR(){
         
         var name=$("#name").val();
         var lname=$("#lname").val();
         var Class=$("#class").val();
         var dateOfExpire=$("#dateOfExpire").val();
         var dateOfIssue=$("#dateOfIssue").val();
         var str="Name:"+name+","+"Last Name:"+lname+","+"Class:"+Class+","+"Date Of Expire:"+dateOfExpire+","+"Date Of Issue:"+dateOfIssue;
         new QRCode(document.getElementById("qrcode"),str);
     }
    </script>
