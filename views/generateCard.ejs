                                    <div class="row">
                                        <div class="col-lg-6">
                                                <div class="form-group">
                                                
                                                        <input name="number" id="name" type="text" class="form-control" style="border:none;border-bottom:1px solid gray" placeholder="Student ID Card" value="<%=student.studentId%>">
        
